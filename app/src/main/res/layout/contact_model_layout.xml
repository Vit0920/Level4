<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_normal"
    android:layout_marginVertical="@dimen/margin_small"
    android:backgroundTint="?attr/colorOnPrimary"
    app:cardCornerRadius="10dp"
    app:strokeColor="?attr/colorSecondary"
    app:strokeWidth="@dimen/stroke_width_small">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/margin_small">

        <ImageView
            android:id="@+id/iv_model_profile_picture"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginVertical="@dimen/margin_small"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_small"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/margin_small_150"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_model_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ava Smith"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="@dimen/text_large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_user_model_career"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photographer"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_small" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/trash_bin" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>